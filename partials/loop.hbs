<div class="extra-pagination">
	{{pagination}}
</div>

{{#foreach posts visibility="all"}}

<article class="{{post_class}}">
	<div class="inner">
		<div class="box post-box">
			<div class="article-card">
				
				{{#if feature_image}}
					<div class="image-column">
						<span class="card-tag">{{primary_tag.name}}</span>
							<div class="post-card-image">
								
								<a href="{{url}}">
									<img src="{{img_url feature_image size="s" format="webp"}}">
								</a>
							</div>
						
					</div>
				
				{{/if}}
				<div {{#if feature_image}}class="content-column" {{/if}}>
					{{#unless feature_image}}
						{{#if primary_tag}}
							<span class="article-tag">{{primary_tag.name}}</span>
						{{/if}}
					{{/unless}}
					<h2 class="post-title"><a href="{{url}}">{{{title}}}</a></h2>
					<span class="post-meta">
						{{t "By"}}
						{{authors separator=", "}}
						
						{{t "on"}}
						<time datetime="{{date format='DD-MM-YYYY'}}">{{date format="DD MMM YYYY"}}</time>
					</span>
					<p class="post-excerpt">{{excerpt}}&hellip;</p>
				</div>

			</div>
			
		</div>
	</div>
</article>

{{/foreach}}

{{pagination}}
